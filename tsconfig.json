{
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "target": "ES6",
        "lib": ["ES2020", "DOM"],
        "module": "ES2020",
        "moduleResolution": "node",

        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,

        "removeComments": false,
        "jsx": "preserve",

        "baseUrl": "./src",
        "paths": {
            "@tables/*": ["*"]
        }
    }
}